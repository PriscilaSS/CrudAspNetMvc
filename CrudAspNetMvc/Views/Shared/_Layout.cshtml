<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Escola</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <h3>@Html.ActionLink("Escola", "Index", "Alunos")</h3>
    
    @RenderBody()

    <footer>
        <p>&copy; @DateTime.Now.Year - Sistema Escolar</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    
    <!-- aqui será renderizada a seção da view com o nome informado em string "scripts" (exemplo no final da view Create) -->
    @RenderSection("scripts", required: false)
</body>
</html>
